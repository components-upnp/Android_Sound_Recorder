<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:onClick="record"
        android:text="Record" />

    <Button
        android:id="@+id/buttonStopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonRecord"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_toEndOf="@+id/buttonRecord"
        android:layout_toRightOf="@+id/buttonRecord"
        android:onClick="stopRecord"
        android:text="STOP" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonRecord"
        android:layout_alignEnd="@+id/buttonStopRecord"
        android:layout_alignRight="@+id/buttonStopRecord"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom du fichier" />

</RelativeLayout>